{
  "name": "server",
  "version": "1.0.0",
  "description": "pos system server",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "dev:server": "cross-env NODE_ENV=development JWT_KEY=xiaomupossystem nodemon --experimental-modules src/index.js",
    "build": "cross-env NODE_ENV=production webpack --env.JWT_KEY=xiaomupossystem --config webpack.prod.cjs",
    "fakedb": "cross-env NODE_ENV=development node tools/fakeData.js",
    "initdb": "node tools/initDB.js",
    "start": "cross-env NODE_ENV=production JWT_KEY=xiaomupossystem nodemon dist/bundle.cjs",
    "rebuild": "electron-rebuild -f -w sqlite3"
  },
  "author": "luscio",
  "license": "MIT",
  "dependencies": {
    "@hapi/joi": "17.1.1",
    "bcrypt": "5.1.1",
    "core-js": "3.33.0",
    "express": "4.18.2",
    "jsonwebtoken": "8.5.1",
    "mathjs": "6.6.5",
    "moment": "2.29.4",
    "pinyin": "2.11.2",
    "sqlite3": "5.1.6"
  },
  "devDependencies": {
    "cross-env": "7.0.3",
    "electron-rebuild": "3.2.9",
    "nodemon": "3.0.1",
    "webpack": "4.47.0",
    "webpack-cli": "3.3.12",
    "webpack-merge": "4.2.2",
    "webpack-node-externals": "1.7.2"
  }
}
